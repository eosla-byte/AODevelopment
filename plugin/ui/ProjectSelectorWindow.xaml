<Window x:Class="RevitCivilConnector.UI.ProjectSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cloud Quantify - Seleccionar Proyecto" Height="450" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#1e1e24">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3f4250"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ListBox">
             <Setter Property="Background" Value="#2b2d38"/>
             <Setter Property="BorderThickness" Value="0"/>
             <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Seleccionar Proyecto Cloud" FontSize="20" FontWeight="Bold" Foreground="White" TextOptions.TextFormattingMode="Display"/>
            <TextBlock Text="Selecciona un proyecto existente para colaborar o crea uno nuevo." FontSize="12" Foreground="#888"/>
        </StackPanel>

        <!-- Folder/Project List -->
        <ScrollViewer Grid.Row="1" Margin="0,0,0,20" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="lstFolders">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander IsExpanded="True" Margin="0,0,0,10" Background="#2b2d38" BorderThickness="1" BorderBrush="#3f4250">
                            <Expander.Header>
                                <Grid Width="520">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="ðŸ“" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding name}" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                    </StackPanel>
                                    
                                    <!-- Folder Actions -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="+ Sub" Width="50" Height="25" Background="#4f46e5" Margin="0,0,5,0"
                                                ToolTip="Crear Subproyecto en esta carpeta" FontSize="10"
                                                Click="BtnCreateSub_Click" Tag="{Binding id}"/>
                                        <Button Content="ðŸ—‘" Width="25" Height="25" Background="#b91c1c" 
                                                ToolTip="Eliminar Carpeta y sus contenidos" FontSize="10"
                                                Click="BtnDeleteFolder_Click" Tag="{Binding id}"/>
                                    </StackPanel>
                                </Grid>
                            </Expander.Header>
                            
                            <!-- Sessions / Subprojects -->
                            <ItemsControl ItemsSource="{Binding sessions}" Margin="20,5,5,5">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="10" Margin="0,2,0,2" Background="#353945" CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding name}" Foreground="#e0e7ff" FontWeight="Medium"/>
                                                    <TextBlock Text="{Binding updated}" FontSize="9" Foreground="#9ca3af"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Content="Unirse" FontSize="10" Background="#10b981" Margin="0,0,5,0"
                                                            Click="BtnJoin_Click" Tag="{Binding}"/> <!-- Parses object -->
                                                    <Button Content="ðŸ—‘" FontSize="10" Background="#b91c1c"
                                                            Click="BtnArchiveSession_Click" Tag="{Binding session_id}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Actions -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Crear Nuevo:" Foreground="Gray" FontSize="10" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                 <TextBox x:Name="txtNewInput" Width="300" Height="30" VerticalContentAlignment="Center" Padding="5" 
                         Text="Nombre..." Foreground="#dddddd" Background="#353945" BorderThickness="0" CaretBrush="White"
                         GotFocus="TxtNewInput_GotFocus" LostFocus="TxtNewInput_LostFocus"/>
                 <Button Content="Crear Carpeta Principal" Click="BtnCreateFolder_Click" Margin="10,0,0,0" Background="#6366f1" FontWeight="Bold"/>
            </StackPanel>
            <TextBlock x:Name="txtStatus" Margin="0,10,0,0" Foreground="#ef4444" FontSize="12"/>
        </StackPanel>
    </Grid>
</Window>
